<h1> Create a new Event </h1>

<div data-turbo = 'false'>
    <%= form_with model: @event do |form| %> 
    <%= form.label :title, "Event Name:" %> <br>
    <%= form.text_field :title %> <br>

    <%= form.label :description, "Date and Time"%> <br>
    <%= form.date_field :event_date %> <br>

    <%= form.submit "Submit" %>
  <% end %>
</div>

<%= link_to 'Back', events_path %>